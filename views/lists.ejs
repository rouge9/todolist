<%- include("header") -%> 

<div class="box" id="heading">
    <h1><%= kindOFDay %> </h1>
</div>

<div class="box">
    <% for (let i = 0; i < newitems.length; i++) { %>
      <div class="item">
          <input type="checkbox">
            <p> <%= newitems[i] %></p>
      </div>  
    <% } %>  
    
    <form action="/" method="post">
        <input type="text" name="additem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="button" >+</button>
    </form>
</div>
    
    
<%- include("footer") -%>
   
